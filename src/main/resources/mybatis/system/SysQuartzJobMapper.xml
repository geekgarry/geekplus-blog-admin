        insert into sys_quartz_job
        (        id,create_by,create_time,del_flag,update_by,update_time,job_class_name,cron_expression,parameter,description,status
        )
        values
        <foreach collection="list" item="item" index="index" separator=",">
        (        #{item.id},#{item.createBy},#{item.createTime},#{item.delFlag},#{item.updateBy},#{item.updateTime},#{item.jobClassName},#{item.cronExpression},#{item.parameter},#{item.description},#{item.status}
        )
