    <!--更新操作SQL-->
    <update id="updateSysQuartzJob" parameterType="SysQuartzJob">
        update sys_quartz_job
        <trim prefix="SET" suffixOverrides=",">
        <if test="createBy != null  and createBy != ''">create_by = #{createBy},</if>
        <if test="createTime != null ">create_time = #{createTime},</if>
        <if test="delFlag != null ">del_flag = #{delFlag},</if>
        <if test="updateBy != null  and updateBy != ''">update_by = #{updateBy},</if>
        update_time = SYSDATE(),
        <if test="jobClassName != null  and jobClassName != ''">job_class_name = #{jobClassName},</if>
        <if test="cronExpression != null  and cronExpression != ''">cron_expression = #{cronExpression},</if>
        <if test="parameter != null  and parameter != ''">parameter = #{parameter},</if>
        <if test="description != null  and description != ''">description = #{description},</if>
        <if test="status != null ">status = #{status},</if>
