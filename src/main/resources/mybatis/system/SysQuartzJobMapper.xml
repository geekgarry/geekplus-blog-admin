    <!--单条数据或详情查询操作SQL-->
    <select id="selectSysQuartzJobById" parameterType="String" resultMap="BaseResultMap">
        <include refid="baseSelectVo"/>
        where
        id = #{id}
    </select>

    <!--添加操作SQL-->
    <insert id="insertSysQuartzJob" parameterType="SysQuartzJob" >
        insert into sys_quartz_job
        <trim prefix="(" suffix=")" suffixOverrides=",">
        <if test="id != null and id != ''">id,</if>
        <if test="createBy != null and createBy != ''">create_by,</if>
        create_time,
        <if test="delFlag != null">del_flag,</if>
        <if test="updateBy != null and updateBy != ''">update_by,</if>
        <if test="updateTime != null">update_time,</if>
        <if test="jobClassName != null and jobClassName != ''">job_class_name,</if>
        <if test="cronExpression != null and cronExpression != ''">cron_expression,</if>
        <if test="parameter != null and parameter != ''">parameter,</if>
        <if test="description != null and description != ''">description,</if>
        <if test="status != null">status,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
        <if test="id != null and id != ''">#{id},</if>
        <if test="createBy != null and createBy != ''">#{createBy},</if>
        SYSDATE(),
        <if test="delFlag != null">#{delFlag},</if>
        <if test="updateBy != null and updateBy != ''">#{updateBy},</if>
        <if test="updateTime != null">#{updateTime},</if>
