<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.geekplus.webapp.system.mapper.SysDictDataMapper">
    <resultMap id="BaseResultMap" type="com.geekplus.webapp.system.entity.SysDictData">
        <result property="id" column="id" jdbcType="INTEGER" />
        <result property="dictSort" column="dict_sort" jdbcType="INTEGER" />
        <result property="dictLabel" column="dict_label" jdbcType="VARCHAR" />
        <result property="dictValue" column="dict_value" jdbcType="VARCHAR" />
        <result property="dictCode" column="dict_code" jdbcType="VARCHAR" />
        <result property="isDefault" column="is_default" jdbcType="CHAR" />
        <result property="status" column="status" jdbcType="CHAR" />
        <result property="createBy" column="create_by" jdbcType="VARCHAR" />
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP" />
        <result property="updateBy" column="update_by" jdbcType="VARCHAR" />
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP" />
        <result property="remark" column="remark" jdbcType="VARCHAR" />
    </resultMap>

    <!--数据字典数据项-->
    <!--基础查询语句-->
    <sql id="baseSelectVo">
        select
        id,dict_sort,dict_label,dict_value,dict_code,is_default,status,create_by,create_time,update_by,update_time,remark
         from sys_dict_data
    </sql>

    <!--基础查询语句2,用作联合查询使用-->
    <sql id="selectSysDictDataVo">
        select
        sdd.id,sdd.dict_sort,sdd.dict_label,sdd.dict_value,sdd.dict_code,sdd.is_default,sdd.status,sdd.create_by,sdd.create_time,sdd.update_by,sdd.update_time,sdd.remark
         from sys_dict_data sdd left join sys_dict sd on sd.dict_code = sdd.dict_code
    </sql>

    <!--数据查询操作SQL(非联合查询)-->
    <select id="selectSysDictDataList" parameterType="SysDictData" resultMap="BaseResultMap">
        <include refid="baseSelectVo"/>
        <where>
        <if test="id !=null ">
         AND id = #{id,jdbcType=INTEGER}
        </if>
        <if test="dictSort !=null ">
         AND dict_sort = #{dictSort,jdbcType=INTEGER}
        </if>
        <if test="dictLabel !=null  and dictLabel != ''">
         AND dict_label = #{dictLabel,jdbcType=VARCHAR}
        </if>
        <if test="dictValue !=null  and dictValue != ''">
         AND dict_value = #{dictValue,jdbcType=VARCHAR}
        </if>
        <if test="dictCode !=null  and dictCode != ''">
         AND dict_code = #{dictCode,jdbcType=VARCHAR}
        </if>
        <if test="isDefault !=null  and isDefault != ''">
         AND is_default = #{isDefault,jdbcType=CHAR}
        </if>
        <if test="status !=null  and status != ''">
         AND status = #{status,jdbcType=CHAR}
        </if>
        <if test="createBy !=null  and createBy != ''">
         AND create_by = #{createBy,jdbcType=VARCHAR}
        </if>
        <if test="createTime !=null ">
         AND create_time = #{createTime,jdbcType=TIMESTAMP}
        </if>
        <if test="updateBy !=null  and updateBy != ''">
         AND update_by = #{updateBy,jdbcType=VARCHAR}
        </if>
        <if test="updateTime !=null ">
         AND update_time = #{updateTime,jdbcType=TIMESTAMP}
        </if>
        <if test="remark !=null  and remark != ''">
         AND remark = #{remark,jdbcType=VARCHAR}
        </if>
        </where>
    </select>

    <!--数据联合查询操作SQL(联合查询) javaType-->
    <select id="selectUnionSysDictDataList" parameterType="SysDictData" resultMap="BaseResultMap">
        <include refid="selectSysDictDataVo"/>
        <where>
        <if test="dictId !=null ">
         AND sd.id = #{dictId}
        </if>
        <if test="id !=null ">
         AND sdd.id = #{id,jdbcType=INTEGER}
        </if>
        <if test="dictSort !=null ">
         AND sdd.dict_sort = #{dictSort,jdbcType=INTEGER}
        </if>
        <if test="dictLabel !=null  and dictLabel != ''">
         AND sdd.dict_label = #{dictLabel,jdbcType=VARCHAR}
        </if>
        <if test="dictValue !=null  and dictValue != ''">
         AND sdd.dict_value = #{dictValue,jdbcType=VARCHAR}
        </if>
        <if test="dictCode !=null  and dictCode != ''">
         AND sdd.dict_code = #{dictCode,jdbcType=VARCHAR}
        </if>
        <if test="isDefault !=null  and isDefault != ''">
         AND sdd.is_default = #{isDefault,jdbcType=CHAR}
        </if>
        <if test="status !=null  and status != ''">
         AND sdd.status = #{status,jdbcType=CHAR}
        </if>
        <if test="createBy !=null  and createBy != ''">
         AND sdd.create_by = #{createBy,jdbcType=VARCHAR}
        </if>
        <if test="createTime !=null ">
         AND sdd.create_time = #{createTime,jdbcType=TIMESTAMP}
        </if>
        <if test="updateBy !=null  and updateBy != ''">
         AND sdd.update_by = #{updateBy,jdbcType=VARCHAR}
        </if>
        <if test="updateTime !=null ">
         AND sdd.update_time = #{updateTime,jdbcType=TIMESTAMP}
        </if>
        <if test="remark !=null  and remark != ''">
         AND sdd.remark = #{remark,jdbcType=VARCHAR}
        </if>
        </where>
    </select>

    <!--单条数据或详情查询操作SQL-->
    <select id="selectSysDictDataById" parameterType="Long" resultMap="BaseResultMap">
        <include refid="baseSelectVo"/>
        where
        id = #{id}
    </select>

    <select id="selectDictDataList" parameterType="SysDictData" resultMap="BaseResultMap">
        <include refid="baseSelectVo"/>
        <where>
            <if test="dictCode != null and dictCode != ''">
                AND dict_code = #{dictCode}
            </if>
            <if test="dictLabel != null and dictLabel != ''">
                AND dict_label like concat('%', #{dictLabel}, '%')
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        order by dict_sort asc
    </select>

    <!--添加操作SQL-->
    <insert id="insertSysDictData" parameterType="SysDictData"  useGeneratedKeys="true" keyProperty="id">
        insert into sys_dict_data
        <trim prefix="(" suffix=")" suffixOverrides=",">
        <if test="dictSort != null">dict_sort,</if>
        <if test="dictLabel != null and dictLabel != ''">dict_label,</if>
        <if test="dictValue != null and dictValue != ''">dict_value,</if>
        <if test="dictCode != null and dictCode != ''">dict_code,</if>
        <if test="isDefault != null and isDefault != ''">is_default,</if>
        <if test="status != null and status != ''">status,</if>
        <if test="createBy != null and createBy != ''">create_by,</if>
        create_time,
        <if test="updateBy != null and updateBy != ''">update_by,</if>
        <if test="updateTime != null">update_time,</if>
        <if test="remark != null and remark != ''">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
        <if test="dictSort != null">#{dictSort},</if>
        <if test="dictLabel != null and dictLabel != ''">#{dictLabel},</if>
        <if test="dictValue != null and dictValue != ''">#{dictValue},</if>
        <if test="dictCode != null and dictCode != ''">#{dictCode},</if>
        <if test="isDefault != null and isDefault != ''">#{isDefault},</if>
        <if test="status != null and status != ''">#{status},</if>
        <if test="createBy != null and createBy != ''">#{createBy},</if>
        SYSDATE(),
        <if test="updateBy != null and updateBy != ''">#{updateBy},</if>
        <if test="updateTime != null">#{updateTime},</if>
        <if test="remark != null and remark != ''">#{remark},</if>
        </trim>
    </insert>

    <!--批量添加操作SQL-->
    <insert id="batchInsertSysDictDataList" parameterType="java.util.List"  useGeneratedKeys="true" keyProperty="id">
        insert into sys_dict_data
        (
        dict_sort,dict_label,dict_value,dict_code,is_default,status,create_by,create_time,update_by,update_time,remark
        )
        values
        <foreach collection="list" item="item" index="index" separator=",">
        (
        #{item.dictSort},#{item.dictLabel},#{item.dictValue},#{item.dictCode},#{item.isDefault},#{item.status},#{item.createBy},#{item.createTime},#{item.updateBy},#{item.updateTime},#{item.remark}
        )
        </foreach>
    </insert>

    <!--删除操作SQL-->
    <delete id="deleteSysDictDataById" parameterType="Long">
        delete FROM sys_dict_data where id = #{id}
    </delete>


    <!--批量删除操作SQL-->
    <delete id="deleteSysDictDataByIds" parameterType="Long">
        delete FROM sys_dict_data where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
             #{id}
        </foreach>
    </delete>


    <!--更新操作SQL-->
    <update id="updateSysDictData" parameterType="SysDictData">
        update sys_dict_data
        <trim prefix="SET" suffixOverrides=",">
        <if test="dictSort != null ">dict_sort = #{dictSort},</if>
        <if test="dictLabel != null  and dictLabel != ''">dict_label = #{dictLabel},</if>
        <if test="dictValue != null  and dictValue != ''">dict_value = #{dictValue},</if>
        <if test="dictCode != null  and dictCode != ''">dict_code = #{dictCode},</if>
        <if test="isDefault != null  and isDefault != ''">is_default = #{isDefault},</if>
        <if test="status != null  and status != ''">status = #{status},</if>
        <if test="createBy != null  and createBy != ''">create_by = #{createBy},</if>
        <if test="createTime != null ">create_time = #{createTime},</if>
        <if test="updateBy != null  and updateBy != ''">update_by = #{updateBy},</if>
        update_time = SYSDATE(),
        <if test="remark != null  and remark != ''">remark = #{remark},</if>
        </trim>
         where id = #{id}
    </update>

    <!--批量更新某个字段-->
    <update id="batchUpdateSysDictDataList" >
        update sys_dict_data set
        id='',dict_sort='',dict_label='',dict_value='',dict_code='',is_default='',status='',create_by='',create_time='',update_by='',update_time='',remark=''
         where id in
        <foreach collection="array" item="item"  open="(" close=")" separator=",">
            #{item}
        </foreach>
    </update>
</mapper>
